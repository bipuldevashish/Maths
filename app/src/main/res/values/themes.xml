<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Maths" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/honey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryComplementry</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryComplementryDark</item>
        <item name="colorOnSecondary">@color/honey</item>
        <!-- Status bar color. -->
    </style>

    <style name="Theme.Maths.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Maths.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Maths.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>