<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.SplashScreen">

    <View
        android:id="@+id/view_white_line"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:background="@drawable/white_line"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/view_third_line"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_second_line"
        android:layout_width="20dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/red_line"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/view_fourth_line"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_third_line"
        android:layout_width="20dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/green_line"
        app:layout_constraintEnd_toStartOf="@+id/view_second_line"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_fourth_line"
        android:layout_width="20dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/purple_line"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/guideline11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="@string/pie_icon"
            android:src="@drawable/ic_pie" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/open_sans_regular"
            android:text="@string/splash_name"
            android:textColor="@color/white"
            android:textSize="28sp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55403554" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="200dp" />


</androidx.constraintlayout.widget.ConstraintLayout>